<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Company Name</th>
      <th>Website</th>
      <th>Description</th>
      <th>Date</th>
      <th>Applied For</th>
      <th>Response</th>
      <th>Rejection</th>
      <th>Interview</th>
      <th>Offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr class = <%= 
      if job.rejection 
        "job-card-reject"
      elsif job.offer
        "job-card-success"
      else 
       "job-card"
      end
      %> >
        <td><%=job.id %></td>
        <td><%= job.title %></td>
        <td><%= job.company_name %></td>
        <td><%= job.website %></td>
        <td>Click Show to view Description</td>
        <td><%= job.date %></td>
        <td><%= job.applied_for %></td>
        <td><%= job.response %></td>
        <td><%= job.rejection %></td>
        <td><%= job.interview %></td>
        <td><%= job.offer %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=link_to 'New Job', new_job_path, class: "job-button" %>
