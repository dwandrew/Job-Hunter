<p id="notice"><%= notice %></p>

<div class = 'job-card'>
<p>
  <strong>Title:</strong>
  <%= @job.title %>
</p>

<p>
  <strong>Company Name:</strong>
  <%= @job.company_name %>
</p>

<p>
  <strong>Website:</strong>
  <%= @job.website %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @job.date %>
</p>

<p>
  <strong>Applied for:</strong>
  <%= @job.applied_for ? "yes" : "no" %>
</p>

<p>
  <strong>Response:</strong>
  <%= @job.response ? "yes" : "no" %>
</p>
<p>
  <strong>Rejection:</strong>
  <%= @job.rejection ? "yes" : "no" %>
</p>
<p>
  <strong>Interview:</strong>
  <%= @job.interview ? "yes" : "no" %>
</p>
<p>
  <strong>Offer:</strong>
  <%= @job.offer ? "yes" : "no" %>
</p>

<%= link_to 'Edit', edit_job_path(@job) %> |
<%= link_to 'Back', jobs_path %>
</div>